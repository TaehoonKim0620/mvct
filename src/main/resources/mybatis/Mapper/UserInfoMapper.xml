<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="mvc.UserInfoMapper">
  <select id="selectUserInfos" resultType= "com.web.dto2.UserInfoDTO">
  SELECT UI_NAME,UI_ID,UI_PWD,UI_NUM
  FROM USER_INFO
  </select>
  <select id="selectUserInfo" resultType="com.web.dto2.UserInfoDTO">
  SELECT UI_NUM, UI_NAME, UI_ID, UI_PWD
  FROM USER_INFO
  WHERE UI_NUM=#{uiNum}
  </select>
  <insert id="insertUserInfo">
  INSERT INTO USER_INFO(UI_NAME,UI_ID,UI_PWD)
  VALUES(#{uiName},#{uiId},#{uiPwd})
  </insert>
  <update id="updateUserInfo">
  UPDATE USER_INFO
  SET UI_NAME = #{uiName},
  UI_ID =#{uiId}
  UI_PWD =#{uiPwd}
  WHERE UI_NUM =#{uiNum}
  </update>
  <delete id="deleteUserInfo">
  	DELETE FROM USER_INFO WHERE UI_NUM = #{uiNum}
  </delete>
  </mapper>
  